<div class="page-header">
<h3>Mallory Furniture South Location</h3>
<%= link_to root_path do %>
<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></button>
<% end %>
</div>

<div class="container">

  <% @products.in_groups_of(3, false) do |products| %>

    <div class="row">

      <% products.each do |product| %>

      <div class="col-xs-4">
        <div class="thumbnail">
          <%= image_tag product.img_file %>
          <div class="caption">
            <h3><%= product.item %></h3>
            <p><%= number_to_currency product.price %><br> Location: <%= product.location%></p>
              <%= link_to 'More info', product_path(id: product.item.parameterize), class:"btn btn-default" %>
          </div>
        </div>
      </div>

      <% end %>

    </div>

  <% end %>

</div>
