<div class="page-header">
<h3>Mallory Furniture</h3>
<%= link_to root_path do %>
<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></button>
<% end %>
<%= link_to products_path do %>
<button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span></button>
<% end %>
<div class="btn-group">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Category
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><%= link_to 'All Products', products_path %></li>
    <li><%= link_to 'Tables', tables_path %></li>
    <li><%= link_to 'Seating', seating_path %></li>
    <li><%= link_to 'Bedroom', bedroom_path %></li>
      <li><%= link_to 'Storage', storage_path %></li>
        <li><%= link_to 'Desks', desks_path %></li>
    <li role="separator" class="divider"></li>
    <li><%= link_to 'Miscellaneous', miscellaneous_path %></li>
  </ul>
</div>
</div>

<div class="container">

  <% @products.in_groups_of(3, false) do |products| %>

    <div class="row">

      <% products.each do |product| %>

      <div class="col-xs-4">
        <div class="thumbnail">
          <%= image_tag product.img_file %>
          <div class="caption">
            <h3><%= product.item %></h3>
            <p><%= number_to_currency product.price %></p>
              <%= link_to 'More info', product_path(id: product.item.parameterize), class:"btn btn-default" %>
          </div>
        </div>
      </div>

      <% end %>

    </div>

  <% end %>

</div>
